      try{
        boolean start = true;
        int selectnum = 0;
        int arraySize = 0;
        String ss = "";

        System.out.println("Enter Array size");

        arraySize = s.nextInt();
        //ArrayList<Integer>array=new ArrayList<Integer>();
        int[] array = new int[arraySize];
        while (start) {


            System.out.println("select number:\n 1: feed your arry\n 2: print array\n 3: search in your arry\n 4: close");
            selectnum = s.nextInt();
            if(selectnum >0 && selectnum <5) {
                if (selectnum == 1) {
                    //add number to array
                    for (int i = 0; i < arraySize; i++) {
                        System.out.println("Enter numbers to add it in array");
                        int enter = s.nextInt();
                        array[i] = enter;
                    }
                } else if (selectnum == 2) {
                    // print;
                    System.out.print("your array: ");
                    for (int i : array) {
                        System.out.print(i);
                    }
                    System.out.println();
                } else if (selectnum == 3) {
                    //search
                    System.out.println("serch by enter number");
                    int num = s.nextInt();
                    //String ss = "";
                    for (int a = 0; a < array.length; a++) {

                        if (num == array[a]) {

                            ss = "it's exist:" + array[a];
                            break;
                        } else {
                            throw new IndexOutOfBoundsException();
                        }

                    }
                    System.out.println(ss);

                } else if (selectnum == 4) {
                    break;
                }
            }else {
                throw new Exception();
            }
        }
        }catch (InputMismatchException e){
            System.out.println("Your enter is wrong: "+e.toString());
        }catch (IndexOutOfBoundsException e){
            System.out.println("this index not exisit: "+e.toString());
        }catch (Exception e){
            System.out.println(e.toString());
        }
        
        
        
        
