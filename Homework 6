    public static void pint_bord() {
        String[][] list = iniGame;
        for (int i = 0; i < list.length; i++) {

            for (int j = 0; j < list.length; j++) {
                System.out.print(list[i][j]);
                if (j == 0 || j == 1) {
                    System.out.print(" | ");
                }
                if (i == 0 && j == 2) {
                    System.out.print("\nâ€¾â€¾â€¾â€¾â€¾â€¾â€¾â€¾â€¾\n");
                } else if (i == 1 && j == 2) {
                    System.out.print("\nâ€¾â€¾â€¾â€¾â€¾â€¾â€¾â€¾â€¾\n");
                }
            }
        }
        System.out.println("\nâ«¼â«¼â«¼â«¼â«¼â«¼â«¼â«¼â«¼â«¼â«¼\n");
    }

    public static void setO() {
        Random random = new Random();
        while (true) {

            int place = random.nextInt(9);
            //int place = s.nextInt();
            if (place == 7 && iniGame[0][0].equals("+")) {
                iniGame[0][0] = "o";
                break;
            } else if (place == 8 && iniGame[0][1].equals("+")) {
                iniGame[0][1] = "o";
                break;
            } else if (place == 9 && iniGame[0][2].equals("+")) {
                iniGame[0][2] = "x";
                break;
            } else if (place == 4 && iniGame[1][0].equals("+")) {
                iniGame[1][0] = "o";
                break;
            } else if (place == 5 && iniGame[1][1].equals("+")) {
                iniGame[1][1] = "o";
                break;
            } else if (place == 6 && iniGame[1][2].equals("+")) {
                iniGame[1][2] = "o";
                break;
            } else if (place == 1 && iniGame[2][0].equals("+")) {
                iniGame[2][0] = "o";
                break;
            } else if (place == 2 && iniGame[2][1].equals("+")) {
                iniGame[2][1] = "o";
                break;
            } else if (place == 3 && iniGame[2][2].equals("+")) {
                iniGame[2][2] = "o";
                break;
            }
        }

    }

    public static String[][] setX() throws IndexOutOfBoundsException {
        System.out.println("Your turn");
        System.out.println("chose number to play\n");
        while (true) {
            int place = s.nextInt();
            if (place >= 0 && place <= 9) {
                if (place == 7 && iniGame[0][0].equals("+")) {
                    iniGame[0][0] = "x";
                    break;
                } else if (place == 8 && iniGame[0][1].equals("+")) {
                    iniGame[0][1] = "x";
                    break;
                } else if (place == 9 && iniGame[0][2].equals("+")) {
                    iniGame[0][2] = "x";
                    break;
                } else if (place == 4 && iniGame[1][0].equals("+")) {
                    iniGame[1][0] = "x";
                    break;
                } else if (place == 5 && iniGame[1][1].equals("+")) {
                    iniGame[1][1] = "x";
                    break;
                } else if (place == 6 && iniGame[1][2].equals("+")) {
                    iniGame[1][2] = "x";
                    break;
                } else if (place == 1 && iniGame[2][0].equals("+")) {
                    iniGame[2][0] = "x";
                    break;
                } else if (place == 2 && iniGame[2][1].equals("+")) {
                    iniGame[2][1] = "x";
                    break;
                } else if (place == 3 && iniGame[2][2].equals("+")) {
                    iniGame[2][2] = "x";
                    break;
                }
                System.out.println("your choice not correct try again");
            } else {
                throw new IndexOutOfBoundsException();
            }


        }
        return iniGame;
    }

