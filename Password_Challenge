public class Test {
    public static void main(String[] args) {

       getPassCheck();

    }

    public static void getPassCheck(){
        Scanner s = new Scanner(System.in);
        System.out.println("Enter password:");
        String pass = s.nextLine();
        char [] x = pass.toCharArray();
        int countnum=0;
        int countLetter=0;
        int countall=0;
        boolean digit = false;

        for (int i=0; i<x.length; i++){
            if(Character.isDigit(x[i])){
                countnum++;
            }
            if(Character.isLetter(x[i])){
                countLetter++;
            }
            if (Character.isLetterOrDigit(x[i])){
                countall++;
            }else {
                digit =true;
                break;
            }
        }
        if(countall >=10 && countnum >=2 && countLetter>1 && digit == false){
            System.out.println(pass);
            System.out.println("your password is correct ✔");
        }else {
            System.out.println(pass);
            System.out.println("your password not accepted ❌");
        }
    }
}
